<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_test"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.programmersk.brainpie.AddTest">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/avatar_boy"
                    android:background="@drawable/avatar_shape"
                    android:scaleType="centerInside"
                    android:padding="1dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:id="@+id/avatar" />
                <ImageView
                    app:srcCompat="@drawable/plus_sign"
                    android:scaleType="fitCenter"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp"
                    android:id="@+id/imageView" />
                <ImageButton
                    android:id="@+id/options_button"
                    app:srcCompat="@drawable/pause_icon"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:onClick="openPauseMenu"
                    android:background="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/addition_marathon_text"
                android:text="Addition Marathon"
                android:textSize="25sp"
                android:textColor="#303030"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/level_icon"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/level_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/level"
                    android:textColor="#444444"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/coin_image"
                    app:srcCompat="@drawable/coin"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="30dp"
                    android:background="#fff"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/before_coins_text_x"
                    android:textColor="#303030"
                    android:text="x"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/coins_text"
                    android:textColor="#303030"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/score_text"
                    android:textColor="#444444"
                    android:text="Score : "
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/score_value"
                    android:textColor="#303030"
                    android:text="0"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/best_score_text"
                    android:textColor="#444444"
                    android:text="| Best : "
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/best_score_value"
                    android:textColor="#303030"
                    android:text="0"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/star_image"
                    app:srcCompat="@drawable/star_icon"
                    android:scaleType="fitCenter"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="3dp"
                    android:background="#fff"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/timer_gif"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#FFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/timer_gif"
                    />
                <TextView
                    android:id="@+id/timer_text"
                    android:layout_marginStart="5dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#26A69A"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num1"
                    android:textColor="#26A69A"
                    android:text="0"
                    android:textSize="65sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/num2"
                    android:textColor="#26A69A"
                    android:text="0"
                    android:textSize="65sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/result_text"
                android:textColor="#444444"
                android:textSize="40sp"
                android:hint="Answer"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="233dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <ImageButton
                        android:id="@+id/b1"
                        app:srcCompat="@drawable/skips"
                        android:scaleType="fitCenter"
                        android:padding="5dp"
                        android:background="#00897B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="skipsButtonListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b2"
                        android:text="1"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b3"
                        android:text="2"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b4"
                        android:text="3"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <ImageButton
                        android:id="@+id/b15"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="center"
                        android:background="#00897B"
                        app:srcCompat="@drawable/backspace_icon"
                        android:onClick="backspacePressed"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <Button
                        android:id="@+id/b6"
                        android:text="*"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#00897B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b7"
                        android:text="4"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b8"
                        android:text="5"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b9"
                        android:text="6"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b10"
                        android:text="*"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#00897B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <Button
                        android:id="@+id/b11"
                        android:text="*"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#00897B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b12"
                        android:text="7"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b13"
                        android:text="8"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b14"
                        android:text="9"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#009688"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/b5"
                        android:text="*"
                        android:textSize="30sp"
                        android:textColor="#FFF"
                        android:background="#00897B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="numberButtonsListener"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <Button
                    android:id="@+id/b16"
                    android:text="*"
                    android:textSize="30sp"
                    android:textColor="#FFF"
                    android:background="#00897B"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="numberButtonsListener"
                    android:layout_height="fill_parent" />
                <Button
                    android:id="@+id/b17"
                    android:text="*"
                    android:textSize="30sp"
                    android:textColor="#FFF"
                    android:background="#00897B"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="numberButtonsListener"
                    android:layout_height="fill_parent" />
                <Button
                    android:id="@+id/b18"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#FFF"
                    android:background="#009688"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="numberButtonsListener"
                    android:layout_height="fill_parent" />
                <Button
                    android:id="@+id/b19"
                    android:text="*"
                    android:textSize="30sp"
                    android:textColor="#FFF"
                    android:background="#00897B"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="numberButtonsListener"
                    android:layout_height="fill_parent" />
                <Button
                    android:id="@+id/b20"
                    android:text="*"
                    android:textSize="30sp"
                    android:textColor="#FFF"
                    android:background="#00897B"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="numberButtonsListener"
                    android:layout_height="fill_parent" />
            </LinearLayout>
                <View
                    android:background="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="13dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
