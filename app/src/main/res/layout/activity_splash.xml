<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programmersk.brainpie.Splash">

    <ImageView
        android:layout_above="@+id/splash_image"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/brain_pie_text"
        android:id="@+id/splash_app_name" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/loading_snake"
        android:id="@+id/splash_image" />
    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/logo_syber_keep"
        android:id="@+id/splash_image_logo" />
    <TextView
        android:id="@+id/splash_owner_name"
        android:text="Syber Keep"
        android:layout_below="@+id/splash_image"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#303030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
