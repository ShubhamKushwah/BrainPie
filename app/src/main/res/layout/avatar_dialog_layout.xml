<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_dialog"
    style="@style/dialog_design"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/change_avatar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Select a new Avatar | or Cancel"
                android:textColor="#fff"
                android:textSize="20sp" />
            <View
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:onClick="selectAvatar"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar_boy" />

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:onClick="selectAvatar"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar_girl" />

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:onClick="selectAvatar"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar_man" />

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:onClick="selectAvatar"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar_woman" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_button_avatar"
                    android:text="Save"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_continue_button"
                    android:onClick="saveButtonListener_Avatar" />

                <Button
                    android:id="@+id/cancel_button_avatar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/custom_exit_button"
                    android:onClick="cancelButtonListener_Avatar"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>